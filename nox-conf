./configure
--with-native-compilation
--with-tree-sitter
--with-gnutls
--with-cairo
--with-harfbuzz
--with-libsystemd
--with-modules
--without-mailutils
--without-pop
--without-x
--without-sound
--sysconfdir=/etc
--prefix=/usr
--libexecdir=/usr/lib
--localstatedir=/var
--disable-build-details

'CFLAGS=
-march=x86-64
-mtune=generic
-O2
-pipe
-fno-plt
-fexceptions
-Wp,-D_FORTIFY_SOURCE=3
-Wformat
-Werror=format-security
-fstack-clash-protection
-fcf-protection
-fno-omit-frame-pointer
-mno-omit-leaf-frame-pointer
-g
-ffile-prefix-map=/build/emacs/src=/usr/src/debug/emacs
-flto=auto'

'LDFLAGS=-Wl,-O1
-Wl,--sort-common
-Wl,--as-needed
-Wl,-z,relro
-Wl,-z,now
-Wl,-z,pack-relative-relocs
-flto=auto'